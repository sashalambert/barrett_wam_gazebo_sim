<?xml version="1.0"?>
<launch>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find barrett_model)/robots/wam_7dof_wam_bhand.urdf.xacro'" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.1" respawn="false" output="screen" />


<!-- launches joint state publisher, controller topics -->
  <include file="$(find barrett_wam_gazebo)/launch/controller_utils.launch"/>

<!-- launch another controller_manager for joint trajectory controller -->
  <rosparam file="$(find barrett_wam_gazebo)/controller/arm_controller_wam.yaml" ns="wam" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" ns="wam" args="spawn arm_controller" respawn="false" output="screen"/>

  <!-- <node name="hand_controller_spawner" pkg="controller_manager" type="controller_manager" ns="wam" args="spawn hand_controller" respawn="false" output="screen"/> -->

</launch>
